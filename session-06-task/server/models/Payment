const mongoose = require('mongoose');

const paymentSchema = new mongoose.Schema({
  patient: {
    type: mongoose.Schema.Types.ObjectId,
    ref: 'Patient',
    required: true
  },

  amount: {
    type: Number,
    required: true,
    min: 0
  },

  status: {
    type: String,
    enum: ['paid', 'unpaid'],
    default: 'unpaid'
  },

  method: {
    type: String,
    enum: ['cash', 'credit', 'insurance', 'other'],
    default: 'cash'
  },

  date: {
    type: Date,
    default: Date.now
  },

  note: {
    type: String
  }
});

module.exports = mongoose.model('Payment', paymentSchema);
